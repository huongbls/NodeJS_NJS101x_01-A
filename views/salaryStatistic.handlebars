<div class="container">
  <h4>Thông tin bảng lương</h4>
  <a class="mt-3" href="/workingHourStatistic">Thông tin giờ làm</a>
  <div class="float-right mb-3">
    <form action="/salaryStatistic-search" method="GET">
      <label for="searchMonth">Chọn tháng</label>
      <input type="month" name="searchMonth" />
      <button type="submit">Tra cứu</button>
    </form>
  </div>
  {{#if salaryStatistic}}
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th>Tháng</th>
          <th>Tổng giờ làm</th>
          <th>Tổng giờ OT</th>
          <th>Giờ làm thiếu (Ngày)</th>
          <th>Tiền lương</th>
        </tr>
      </thead>
      <tbody>
        {{#each salaryStatistic}}
          <tr>
            <td>{{month}}</td>
            <td>{{totalHour}}</td>
            <td>{{overTime}}</td>
            <td>{{missingHour}} hr - ({{missingDay}} ngày)</td>
            {{#if totalHour}}
              <td>{{totalSalary}}</td>
            {{else}}
              <td>0</td>
            {{/if}}
          </tr>
        {{/each}}
      </tbody>
    </table>
    {{#if searchMonth}}
      <p class="mt-3">
        <a href="/salaryStatistic">Quay lại Thông tin bảng lương</a>
      </p>
    {{/if}}
  {{else}}
    {{#ifCond searchMonth "!==" "NaN/NaN"}}
      <p class="mt-5">Không có thông tin bảng lương tháng
        {{searchMonth}}. Hãy chọn lại hoặc
        <a href="/salaryStatistic">quay lại Thông tin bảng lương</a>
      </p>
    {{else}}
      <p class="mt-5">Bạn chưa chọn tháng để tra cứu. Hãy chọn lại hoặc
        <a href="/salaryStatistic">Quay lại Thông tin bảng lương</a>
      </p>
    {{/ifCond}}
  {{/if}}
</div>