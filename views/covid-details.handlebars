<h1>Thông tin Covid cá nhân</h1>
    <h2>{{user.name}}</h2>

    <div class="covid-detail-wrapper">
        <section class="temperature">
            <h3>Nhiệt độ cơ thể</h3>
            <div class="covid-detail">
                <table>
                    <thead>
                        <tr>
                            <th>Ngày đăng ký</th>
                            <th>Nhiệt độ cơ thể</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each covid.bodyTemperatures}}
                            <tr>
                                <td>{{tolocaledatestring date}}</td>
                                <td>{{value}}<sup>o</sup>C</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
        </section>
        <section class="vaccine">
            <h3>Tiêm vaccine</h3>
            <div class="covid-detail">
                <table>
                    <thead>
                        <tr>
                            <th>Ngày tiêm</th>
                            <th>Loại mũi vaccine</th>
                            <th>Tên vaccine</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each covid.vaccine}}
                        {{#if name}}
                                <tr>
                                    <td>{{tolocaledatestring date}}</td>
                                    <td>Mũi {{add @index}}</td>
                                    <td>{{name}}</td>
                                </tr>
                        {{/if}}
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </section>
        <section class="positive">
            <h3>Dương tính Covid</h3>
            <div class="covid-detail">
                <table>
                    <thead>
                        <tr>
                            <th>Ngày dương tính</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each covid.positive}}
                            <tr>
                                <td>{{tolocaledatestring date}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </section>
    </div>
