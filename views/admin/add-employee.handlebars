<div class="card-deck mt-3">
  <div class="card bg-light">
    <div class="card-body text-left">
      <h4 class="card-text mb-3">Thêm nhân viên</h4>
      <form action="/admin/add-employee" method="POST">
        <div class="row">
          <div class="form-group col-sm-12 col-md-6">
            <label for="name">Họ và tên</label>
            <input required type="text" class="form-control" name="name" />
          </div>
          <div class="form-group col-sm-12 col-md-6">
            <label for="dob">Ngày sinh</label>
            <input required type="date" class="form-control" name="dob" />
          </div>
        </div>
        <div class="row">
          <div class="form-group col-sm-12 col-md-6">
            <label for="department">Phòng ban</label>
            <select class="form-control" name="department">
              <option selected="true" disabled="disabled">Chọn phòng ban</option>
              <option value="HR">HR</option>
              <option value="GA">GA</option>
              <option value="IT">IT</option>
              <option value="BD">BD</option>
              <option value="Kế toán">Kế toán</option>
            </select>
          </div>
          <div class="form-group col-sm-12 col-md-6">
            <label for="position">Chức vụ</label>
            <select class="form-control" name="position">
              <option selected="true" disabled="disabled">Chọn chức vụ</option>
              <option value="manager">Trưởng phòng</option>
              <option value="deputy-manager">Phó phòng</option>
              <option value="staff">Nhân viên</option>
            </select>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-sm-12 col-md-6">
            <label for="startDate">Ngày vào công ty</label>
            <input type="date" class="form-control" name="startDate" />
          </div>
          <div class="form-group col-sm-12 col-md-6">
            <label for="annualLeave">Ngày nghỉ phép</label>
            <input
              required
              type="number"
              class="form-control"
              name="annualLeave"
            />
          </div>
        </div>
        <div class="row">
          <div class="form-group col-sm-12 col-md-6">
            <label for="salaryScale">Hệ số lương</label>
            <input
              required
              type="number"
              class="form-control"
              name="salaryScale"
            />
          </div>
          <div class="form-group col-sm-12 col-md-6">
            <label for="email">Email</label>
            <input required type="text" class="form-control" name="email" />
          </div>
        </div>
        <div class="row">
          <div class="form-group col-sm-12 col-md-6">
            <label for="gender">Giới tính</label>
            <select class="form-control" name="gender">
              <option selected="true" disabled="disabled">Chọn giới tính</option>
              <option value="Nam">Nam</option>
              <option value="Nữ">Nữ</option>
            </select>
          </div>
        </div>
        <button type="submit" class="btn btn-secondary">Thêm nhân viên</button>
      </form>
    </div>
  </div>
</div>